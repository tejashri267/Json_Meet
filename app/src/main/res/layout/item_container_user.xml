<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/textchar1"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/back_user_icon"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:textColor="@color/colorIcon"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewdivider"/>
    <View
        android:id="@+id/viewsupport"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/textchar1"
        app:layout_constraintStart_toEndOf="@id/textchar1"
        app:layout_constraintTop_toTopOf="@id/textchar1"
        />
    <ImageView
        android:id="@+id/imgvideo"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_2sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_video"
        app:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/viewdivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/imgcall"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toTopOf="@id/viewdivider"
        app:tint="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/imgvideo"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryTest"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toTopOf="@id/viewsupport"
        app:layout_constraintEnd_toStartOf="@id/imgcall"
        app:layout_constraintStart_toEndOf="@id/textchar1"
        />
    <TextView
        android:id="@+id/textemail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"

        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/colorSecondaryTest"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@id/imgcall"
        app:layout_constraintStart_toEndOf="@id/textchar1"
        app:layout_constraintTop_toTopOf="@id/viewsupport" />





    <View
        android:id="@+id/viewdivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/textchar1"
        app:layout_constraintTop_toBottomOf="@id/textchar1" />



</androidx.constraintlayout.widget.ConstraintLayout>